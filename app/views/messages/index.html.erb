<h1>メッセージ一覧</h1>
<%= link_to "投稿画面へ", new_message_path %>
<table>
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.title %></td>
      <td>
        <%= link_to "詳細", message %>
        <%= link_to "編集", edit_message_path(message) %>
        <%= link_to "削除", message, method: :delete, data: { confirm: "削除しますか?" } %>
      </td>
    </tr>
  <% end %>
</table>
